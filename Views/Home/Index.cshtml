@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Home Page";
}

@if (!(User.Identity.IsAuthenticated))
{
    <div class="text-center">
        <h1 class="display-4 fw-bold fs-200">Welcome to E-Corp Tennis</h1>
    </div>
    <div class="text-center">
        <p><b>E-Corp Tennis is a tennis club based in the heart of the city of Darwin. We offer a range of tennis sessions for all ages and abilities.</b></p>
    </div>
    <div class="text-center" style="margin: 10px">
        <a class="btn btn-success" style="margin: auto; font-size: 2rem; margin: 10px" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="btn btn-primary" style="margin: auto; font-size: 2rem; margin: 10px" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
    <div class="text-center">
        <p>An account is required to access services.</p>
    </div>
}

@if (User.IsInRole("Admin"))
{
    <div class="container py-5">
        <div class="row">
            <div class="col p-5">
                <h1> <i class="fa fa-tachometer" aria-hidden="true"></i> Admin Dashboard</h1>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a class="text-decoration-none" asp-controller="Training" asp-action="Coaches">
                    <div class="card p-3 shadow text-center border-0" style="background-color: darkred; color: white">
                        <div class="card-body">
                            <i class="fa fa-bookmark-o fa-2x" aria-hidden="true"></i>
                            <hr />
                            <p class="card-title lead">Coaches</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col">
                <a class="text-decoration-none" asp-controller="Training" asp-action="Events">
                    <div class="card p-3 shadow text-center border-0" style="background-color: darkred; color: white">
                        <div class="card-body">
                            <i class="fa fa-edit fa-2x" aria-hidden="true"></i>
                            <hr />
                            <p class="card-title lead">Manage Sessions</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col">
                <a class="text-decoration-none" asp-controller="Training" asp-action="CreateEvent">
                    <div class="card p-3 shadow text-center border-0" style="background-color: darkred; color: white">
                        <div class="card-body">
                            <i class="fa fa-image fa-2x" aria-hidden="true"></i>
                            <hr />
                            <p class="card-title lead">Create Sessions</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col">
                <a class="text-decoration-none" asp-controller="Training" asp-action="Members">
                    <div class="card p-3 shadow text-center border-0" style="background-color: darkred; color: white">
                        <div class="card-body">
                            <i class="fa fa-envelope fa-2x" aria-hidden="true"></i>
                            <hr />
                            <p class="card-title lead">Members List</p>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>
}

